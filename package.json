{
  "name": "bambans-github-io-blog",
  "version": "2.1.0",
  "description": "Personal website for Otávio Rodrigues Bambans with enhanced markdown blog featuring syntax highlighting, math expressions, comprehensive Mermaid chart support, and shared JavaScript utilities",
  "main": "index.html",
  "scripts": {
    "dev": "python -m http.server 8000",
    "serve": "python -m http.server 8000",
    "build": "echo 'Static site - no build process required'",
    "test": "echo 'No tests specified'",
    "deploy": "echo 'Deploy to GitHub Pages'",
    "lint:html": "echo 'HTML validation can be added here'",
    "format": "echo 'Code formatting can be added here'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bambans/bambans.github.io.git"
  },
  "keywords": [
    "personal-website",
    "portfolio",
    "tailwindcss",
    "blog",
    "markdown",
    "github-pages",
    "static-site",
    "syntax-highlighting",
    "prismjs",
    "mermaid",
    "mermaid-charts",
    "flowcharts",
    "sequence-diagrams",
    "gantt-charts",
    "pie-charts",
    "katex",
    "offline-support",
    "service-worker",
    "shared-utilities",
    "modular-javascript"
  ],
  "author": {
    "name": "Otávio Rodrigues Bambans",
    "email": "otavio@bambans.top",
    "url": "https://bambans.top"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bambans/bambans.github.io/issues"
  },
  "homepage": "https://bambans.github.io",
  "dependencies": {},
  "devDependencies": {},
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "cdn": {
    "tailwindcss": "https://cdn.tailwindcss.com",
    "marked": "https://cdn.jsdelivr.net/npm/marked/marked.min.js",
    "dompurify": "https://cdn.jsdelivr.net/npm/dompurify@3.0.6/dist/purify.min.js",
    "github-markdown-css": "https://cdn.jsdelivr.net/npm/github-markdown-css@5.2.0/github-markdown.min.css",
    "prismjs-core": "https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-core.min.js",
    "prismjs-autoloader": "https://cdn.jsdelivr.net/npm/prismjs@1.29.0/plugins/autoloader/prism-autoloader.min.js",
    "prismjs-css": "https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism-tomorrow.min.css",
    "mermaid": "https://cdn.jsdelivr.net/npm/mermaid@10.6.1/dist/mermaid.min.js",
    "katex": "https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.js",
    "katex-css": "https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css",
    "katex-auto-render": "https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/contrib/auto-render.min.js",
    "prismjs-line-numbers": "https://cdn.jsdelivr.net/npm/prismjs@1.29.0/plugins/line-numbers/prism-line-numbers.min.js",
    "prismjs-copy-clipboard": "https://cdn.jsdelivr.net/npm/prismjs@1.29.0/plugins/copy-to-clipboard/prism-copy-to-clipboard.min.js"
  },
  "config": {
    "blog": {
      "github_username": "bambans",
      "github_repo": "bambans.github.io",
      "branch": "main",
      "posts_path": "blog/posts/"
    },
    "markdown": {
      "gfm": true,
      "breaks": true,
      "pedantic": false,
      "sanitize": true,
      "smartLists": true,
      "smartypants": false
    },
    "syntax_highlighting": {
      "theme": "tomorrow",
      "languages": ["javascript", "python", "bash", "css", "html", "json", "markdown", "sql", "yaml"],
      "line_numbers": true
    },
    "features": {
      "mermaid_diagrams": true,
      "mermaid_chart_types": [
        "flowcharts",
        "sequence_diagrams", 
        "gantt_charts",
        "pie_charts",
        "git_graphs",
        "state_diagrams",
        "journey_maps",
        "class_diagrams",
        "er_diagrams"
      ],
      "mermaid_controls": {
        "copy_code": true,
        "fullscreen_view": true,
        "error_handling": true
      },
      "math_expressions": true,
      "task_lists": true,
      "tables": true,
      "footnotes": true,
      "emoji": true,
      "code_copy": true,
      "line_numbers": true,
      "reading_progress": true,
      "search": true,
      "keyboard_shortcuts": true,
      "offline_support": true,
      "responsive_design": true,
      "shared_utilities": true,
      "modular_architecture": true,
      "performance_monitoring": true,
      "error_handling": true
    }
  },
  "file_structure": {
    "js/": {
      "main.js": "Shared site utilities and common functionality",
      "blog-utils.js": "Blog-specific utilities and helpers",
      "tailwind_config.js": "Shared Tailwind CSS configuration"
    },
    "blog/js/": {
      "main.js": "Blog application logic using shared utilities"
    },
    "sw.js": "Service Worker for offline functionality"
  },
  "features": [
    "Responsive design with Tailwind CSS",
    "Dark theme terminal aesthetic",
    "Enhanced markdown blog with GitHub integration",
    "Syntax highlighting with Prism.js",
    "Comprehensive Mermaid diagram support with 9+ chart types",
    "Interactive chart controls (copy, fullscreen, error handling)",
    "Math expressions with KaTeX",
    "Task lists and enhanced tables",
    "Spotify playlist integration",
    "Social media links",
    "Mobile-first responsive design",
    "Accessibility features",
    "Custom animations and transitions",
    "Advanced markdown parsing",
    "Code copy functionality",
    "Reading time estimation",
    "Search functionality",
    "Tag system support",
    "Offline functionality with Service Worker",
    "Progressive Web App features",
    "Copy code functionality",
    "Line numbers in code blocks",
    "Keyboard navigation shortcuts",
    "Enhanced error handling",
    "Performance optimizations",
    "Interactive Mermaid charts with fullscreen and copy features",
    "Support for flowcharts, sequence diagrams, Gantt charts, pie charts",
    "Git graphs, state diagrams, journey maps, class and ER diagrams",
    "Terminal-themed chart styling with dark mode support",
    "Modular JavaScript architecture with shared utilities",
    "Performance monitoring and error handling",
    "Reusable components across site and blog",
    "Optimized file structure for maintainability"
  ]
}